// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "buffer_font_family": "Geist Mono",
  "show_edit_predictions": true,
  "edit_predictions": {
    "mode": "subtle"
  },
  "assistant": {
    "default_profile": "ask",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "chat_panel": {
    "dock": "right"
  },
  "gutter": {
    "folds": false
  },
  "theme": "Clerk Dark",
  "cursor_blink": false,
  "features": {
    "edit_prediction_provider": "zed"
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "tab_bar": {
    // "show": false
  },
  "vim_mode": true,
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "use_autoclose": false,
  "format_on_save": "off",
  "languages": {
    "TypeScript": {
      "language_servers": ["angular", "..."]
    },
    "HTML": {
      "language_servers": ["angular", "..."]
    }
  },
  "lsp": {
    "angular": {
      "initialization_options": {
        "angular_language_server_version": "19.2.2",
        "typescript_version": "5.8.2"
      }
    }
  }
}
