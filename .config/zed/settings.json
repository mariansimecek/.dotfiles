// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "debugger": {
    "dock": "left"
  },
  "show_edit_predictions": true,
  "edit_predictions": {
    "mode": "subtle"
  },
  "agent": {
    "always_allow_tool_actions": true,
    "inline_assistant_model": {
      "provider": "google",
      "model": "gemini-2.0-flash"
    },
    "default_profile": "ask",
    "default_model": {
      "provider": "google",
      "model": "gemini-2.0-flash"
    }
  },
  "chat_panel": {
    "dock": "right"
  },
  "gutter": {
    "folds": false
  },
  "theme": "Oxocarbon Dark (IBM Carbon)",
  "cursor_blink": false,
  "features": {
    "edit_prediction_provider": "zed"
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "tab_bar": {
    // "show": false
  },
  "vim_mode": true,

  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "use_autoclose": false,
  "format_on_save": "off",
  // "languages": {
  //   "TypeScript": {
  //     "language_servers": ["angular", "..."]
  //   },
  //   "HTML": {
  //     "language_servers": ["angular", "..."]
  //   }
  // },
  // "languages": {
  //   "TypeScript": {
  //     "language_servers": ["tsgo", "vtsls"]
  //     "language_servers": ["tsgo"]
  //   }
  // },
  "lsp": {
    "angular": {
      "initialization_options": {
        "angular_language_server_version": "19.2.4",
        "typescript_version": "5.8.3"
      }
    },
    "biome": {
      "settings": {
        "require_config_file": true
      }
    }
  }
}
